name:                sequencer
version:             0.1.0.0
license:             BSD3
license-file:        LICENSE
author:              kohlrabi
maintainer:          kohlrabi@aragonit
category:            Sound
build-type:          Simple
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Sound.Sequencer.Sequencer
  build-depends:       base >=4.9 && <5
                     , modfile
                     , vty
                     , RtMidi
  ghc-options:         -Wall
  hs-source-dirs:      src
  default-language:    Haskell2010


executable sequencer
  main-is:             Main.hs
  build-depends:       base >=4.9 && <5
                     , sequencer
                     , modfile
                     , vty
                     , split
                     , bytestring
                     , binary
  ghc-options:         -threaded
  hs-source-dirs:      src
  default-language:    Haskell2010
